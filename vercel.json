{
  "buildCommand": "pnpm --filter @ssi/core build && pnpm --filter player-vue build && pnpm --filter @ssi/schools-dashboard build && mkdir -p packages/player-vue/dist/schools && cp -r apps/schools-dashboard/dist/* packages/player-vue/dist/schools/",
  "outputDirectory": "packages/player-vue/dist",
  "installCommand": "npm install -g pnpm && pnpm install",
  "framework": "vite",
  "functions": {
    "api/audio/[audioId].ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/audio/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/schools", "destination": "/schools/index.html" },
    { "source": "/schools/(.*)", "destination": "/schools/index.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
