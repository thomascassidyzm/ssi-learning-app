## BELT PROGRESSION SYSTEM
## ============================================================================

BELT_SYSTEM:
  description: |
    8 martial arts belts track learner progress through the course.
    Each belt requires completing a certain number of LEGOs.

  belts:
    white:
      name: "White"
      legos_required: 0
      color: "#f5f5f5"
      glow: "rgba(245, 245, 245, 0.2)"

    yellow:
      name: "Yellow"
      legos_required: 16
      color: "#fbbf24"
      glow: "rgba(251, 191, 36, 0.2)"

    orange:
      name: "Orange"
      legos_required: 40
      color: "#f97316"
      glow: "rgba(249, 115, 22, 0.2)"

    green:
      name: "Green"
      legos_required: 80
      color: "#22c55e"
      glow: "rgba(34, 197, 94, 0.2)"

    blue:
      name: "Blue"
      legos_required: 160
      color: "#3b82f6"
      glow: "rgba(59, 130, 246, 0.2)"

    purple:
      name: "Purple"
      legos_required: 300
      color: "#8b5cf6"
      glow: "rgba(139, 92, 246, 0.2)"

    brown:
      name: "Brown"
      legos_required: 560
      color: "#a87848"
